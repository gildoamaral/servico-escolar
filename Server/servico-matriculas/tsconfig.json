{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "nodenext",
    "target": "esnext",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["src", "src/lib/client.ts"], // Quais pastas o compilador deve olhar
  "exclude": ["node_modules"] // Quais pastas o compilador deve ignorar
}